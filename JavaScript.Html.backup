    ],
    'bahar': [
      { key: 'donem1-b', name: 'D√∂nem 1 Bahar', icon: 'bi-1-circle' },
      { key: 'donem2-b', name: 'D√∂nem 2 Bahar', icon: 'bi-2-circle' },
      { key: 'donem3-b', name: 'D√∂nem 3 Bahar', icon: 'bi-3-circle' },
      { key: 'secmeli-b', name: 'Se√ßmeli Dersler', icon: 'bi-star' }
    ]
  },

  // Takvim ayarlarƒ±
  calendar: {
    initialView: 'timeGridWeek',
    locale: 'tr',
    allDaySlot: false,
    nowIndicator: true,
    slotMinTime: "08:00:00",
    slotMaxTime: "17:00:00",
