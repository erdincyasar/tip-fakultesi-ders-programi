    headerToolbar: {
      left: 'prev,next today',
      center: 'title',
      right: 'timeGridWeek,timeGridDay,listWeek'
    }
  },

  // Zamanlayƒ±cƒ± ayarlarƒ±
  timers: {
    dateTimeUpdate: 1000, // 1 saniye
    autoRefresh: 10 * 60 * 1000, // 10 dakika
    statusHideDelay: 5000 // 5 saniye
  }
};

// Mevcut d√∂nemi otomatik belirle (mevcut aya g√∂re)
function getCurrentSemester() {
  const currentMonth = new Date().getMonth() + 1; // 1-12
  // ≈ûubat-Temmuz (2-7): Bahar, Aƒüustos-Ocak (8-1): G√ºz
  return (currentMonth >= 2 && currentMonth <= 7) ? 'bahar' : 'guz';
