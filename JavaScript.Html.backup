<script>
// ==========================================
// CONFIG - Yapƒ±landƒ±rma
// ==========================================
const CONFIG = {
  // Sheet yapƒ±landƒ±rmasƒ±
  sheetConfig: {
    'guz': [
      { key: 'donem1-g', name: 'D√∂nem 1 G√ºz', icon: 'bi-1-circle' },
      { key: 'donem2-g', name: 'D√∂nem 2 G√ºz', icon: 'bi-2-circle' },
